<h1 class="recipeH1">IRONHACK Recipes</h1>
<p class="paragraph">Click on the recipe to see the details!</p>
<div class="recipe-box">
  {{#each recipes}}
  <div class="flex-box">
    <img src="{{this.image}}" alt="">
    <h2><a href="/recipes/{{this._id}}">{{this.title}}</a></h2>
    <a href="/recipe/{{this._id}}">See more</a>
  </div>
  {{/each}}
</div>